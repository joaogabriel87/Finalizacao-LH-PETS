@model ForncedorModel

@{
    ViewData["Title"] = "Exlus√£o";
}
<div class="container bg-light p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Excluir</h1>
    </div>

<form method="post" asp-controller="Fornecedor" asp-action="Excluir">
     <input type="hidden" asp-for="Id"/>
         <div class="text-center">
        <h2 class="text-danger">Tem certeza que deseja excluir?</h2>
  <div class="mb-3">
    <label for="Fornecedora" class="form-label">Fornecedora</label>
    <input type="text" class="form-control" asp-for="Fornecedora" id="Fornecedora" placeholder="Digite o nome da Fornecedora"disabled>
  <div class="mb-3">
    <label for="CNPJ" class="form-label">CNPJ</label>
    <input type="text" class="form-control" asp-for="Cnpj" id="Cnpj" placeholder="Digite o CNPJ"disabled>
  </div>
  <div class="mb-3">
    <label for="Email" class="form-label">Email</label>
    <input type="Email" class="form-control" asp-for="Email" id="Email" placeholder="Digite o email"disabled>
  </div>
  <div class="mb-3">
    <label for="Tipo" class="form-label">Fornecimento </label>
    <input type="text" class="form-control" asp-for="Tipo" id="Tipo" placeholder="Digite os fornecimentos" disabled>
  </div>
  <div class="d-grid gap-2">
  <button type="submit" class="btn btn-success">Deletar</button>
  <a button type="button" class="btn btn-primary" asp-controller="Fornecedor" asp-action="Index">Voltar</a>

  </div>
</form>
</div>